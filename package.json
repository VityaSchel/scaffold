{
  "name": "@hloth/scaffold",
  "version": "1.0.1",
  "description": "NPX tool for me to easily scaffold new project, containing TypeScript config for modern ES, eslint with my favorite code style and Jest tests with ts support",
  "main": "index.js",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "del out/",
    "build": "swc ./src -d ./out --copy-files",
    "set": "npm run build && npm remove -g && npm i -g",
    "test": "jest -i"
  },
  "bin": {
    "sf": "out/cli.js"
  },
  "author": "vityaschel <hi@hloth.dev> (https://hloth.dev/)",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.1.2",
    "package-name-regex": "^2.0.6",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.19.4",
    "@babel/preset-typescript": "^7.18.6",
    "@swc/cli": "^0.1.57",
    "@swc/core": "^1.3.18",
    "del-cli": "^4.0.1",
    "typescript": "^4.8.3",
    "@types/node": "^18.7.18",
    "@types/jest": "^29.2.1",
    "@types/package-name-regex": "^2.0.0",
    "@types/prompts": "^2.4.1",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "babel-jest": "^29.2.2",
    "eslint": "^8.26.0",
    "ts-jest": "^29.0.3"
  },
  "files": [
    "out/**"
  ]
}
